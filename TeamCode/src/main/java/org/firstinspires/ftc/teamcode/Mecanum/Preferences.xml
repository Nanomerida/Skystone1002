<?xml version = "1.0" encoding="UTF-8"?>
<Preferences>
    <!-- Ignore this -->
    <IntakeParams>
        <LiftMaxHeight>4000</LiftMaxHeight>
        <LiftMinHeight>10</LiftMinHeight>
    </IntakeParams>

    <Drivers>
    <!-- Drivers and manipulators, please add to the configs below following the format of the current ones -->
    <!-- Manipulators should note that the "arm" is a rotating arm which holds the claw, and is moved by the lift -->
        <!-- Parker's Config -->
        <Driver name = "Parker">
            <!-- buttons are x,y,a,b for Slow-Mode -->
            <slowModeButton>x</slowModeButton>
            <fieldCentric>no</fieldCentric>
            <fieldCentricButton>x</fieldCentricButton>
        </Driver>
        <!-- Aidan's Config -->
        <Driver name = "Aidan">
            <slowModeButton>x</slowModeButton>
            <fieldCentric>ues</fieldCentric>
            <fieldCentricButton>x</fieldCentricButton>
        </Driver>
        <!-- Jonah's Config -->
        <Manipulator name = "Jonah">
            <!-- smooth (raise/lower manually) or staged(set heights) -->
            <!-- Note that if staged, lift controls must be dpad -->
            <liftMode>smooth</liftMode>
            <!-- dpad or joystick. If joystick, right_stick or left_stick -->
            <liftControls>dpad</liftControls>
            <!-- can be any button(left_bumper, right_bumper, x, y, a, b, stick buttons(press down stick, either left_stick_button or right_stick_button), etc) -->
            <liftSlowModeButton>x</liftSlowModeButton>
            <!-- dpad or joystick. If joystick, right_stick or left_stick. DIFFERENT THAN LIFT -->
            <armControls>left_stick</armControls>
            <!-- triggers or bumpers -->
            <clawControl>triggers</clawControl>

        </Manipulator>
    </Drivers>
</Preferences>
